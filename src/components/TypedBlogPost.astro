---

import type { CollectionEntry } from "astro:content";
import { Formatter } from "../utils/formatDate.ts";
import { Image } from "astro:assets";
import { lazy } from "astro/zod";

interface Props {
  post: CollectionEntry<'post'>
}

const { post } = Astro.props;

---

<div class="lg:flex">
  
  <Image 
    class="object-cover w-full h-56 rounded-lg lg:w-64"
    src={post.data.image}
    alt={post.data.title}
    width={500}
    height={500}
    quality="low"
    loading="lazy"
  />

  <div class="flex flex-col justify-between py-6 lg:mx-6">
    <a href={`/posts/${post.slug}`} class="text-xl font-semibold text-gray-800 hover:underline dark:text-white ">
      {post.data.title}
    </a>

    <p class="mt-3 text-base text-gray-500 dark:text-gray-300">
      {post.data.description}
    </p>
    
    <span class="text-sm text-gray-500 dark:text-gray-300">{Formatter.formatDate(post.data.date)}</span>
  </div>
</div>