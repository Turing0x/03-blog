---

import { Formatter } from "../utils/formatDate.ts";

interface Props {
  title: string;
  description: string;
  image: string;
  date: Date;
  url: string;
}

const { title, description, image, date, url } = Astro.props;

---

<div class="lg:flex">
  <img class="object-cover w-full h-56 rounded-lg lg:w-64" src={image} alt={title} />

  <div class="flex flex-col justify-between py-6 lg:mx-6">
    <a href={url} class="text-xl font-semibold text-gray-800 hover:underline dark:text-white ">
      {title}
    </a>

    <p class="mt-3 text-base text-gray-500 dark:text-gray-300">
      {description}
    </p>
    
    <span class="text-sm text-gray-500 dark:text-gray-300">{Formatter.formatDate(date)}</span>
  </div>
</div>